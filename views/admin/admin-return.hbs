<script>
document.addEventListener('DOMContentLoaded', () => {
  const statusSelects = document.querySelectorAll('.return-status');
  console.log('status selects', statusSelects);

  statusSelects.forEach(select => {
    select.addEventListener('change', async (event) => {
      const orderId = select.getAttribute('data-order-id');
      const returnItemId = select.getAttribute('data-return-item-id');
      const newStatus = select.value;
      
      console.log('order id', orderId, 'new status', newStatus, 'return item id', returnItemId);

      const confirmMessage = `Are you sure you want to change the status to ${newStatus}?`;
      const refundMessage = `Do you also want to refund the amount to the user's wallet?`;

      const proceed = await Swal.fire({
        title: 'Confirm Status Change',
        text: confirmMessage,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, change it!'
      });

      if (proceed.isConfirmed) {
        if (newStatus === 'refunded') {
          const refundConfirm = await Swal.fire({
            title: 'Confirm Refund',
            text: refundMessage,
            icon: 'info',
            showCancelButton: true,
            confirmButtonText: 'Yes, refund!'
          });

          if (!refundConfirm.isConfirmed) {
            select.value = 'pending'; // Revert the selection if refund is not confirmed
            return;
          }
        }

        try {
          const response = await fetch('/update-return-status', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ orderId, returnItemId, status: newStatus }),
          });

          const result = await response.json();

          if (response.ok) {
            Swal.fire({
              title: 'Success',
              text: 'Status updated successfully',
              icon: 'success'
            });
          } else {
            Swal.fire({
              title: 'Error',
              text: result.error || 'Failed to update status',
              icon: 'error'
            });
            select.value = 'pending'; // Revert the selection in case of error
          }
        } catch (error) {
          console.error('Error updating status:', error);
          Swal.fire({
            title: 'Error',
            text: 'Failed to update status',
            icon: 'error'
          });
          select.value = 'pending'; // Revert the selection in case of error
        }
      } else {
        select.value = 'pending'; // Revert the selection if action is canceled
      }
    });
  });
});
</script>



