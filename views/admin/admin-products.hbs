<script>
document.addEventListener('DOMContentLoaded', function() {
    const addCategoryBtn = document.getElementById('addCategory');
    const categoryModal = new bootstrap.Modal(document.getElementById('categoryModal'));
    const addNewCategoryBtn = document.getElementById('addNewCategoryBtn');
    const newCategoryInput = document.getElementById('newCategoryInput');
    const categoryList = document.getElementById('categoryList');
    const categoryFilter = document.getElementById('categoryFilter');

    addCategoryBtn.addEventListener('click', function() {
        loadCategories();
        categoryModal.show();
        document.body.classList.add('modal-open');
    });

    document.getElementById('categoryModal').addEventListener('hidden.bs.modal', function () {
        document.body.classList.remove('modal-open');
    });

    addNewCategoryBtn.addEventListener('click', addNewCategory);

    function loadCategories() {
        // Fetch categories from the server and populate the list
        fetch('/categories')
            .then(response => response.json())
            .then(categories => {
                categoryList.innerHTML = '';
                categories.forEach(category => {
                    addCategoryToList(category);
                });
            });
    }

    function addNewCategory() {
        const categoryName = newCategoryInput.value.trim();
        if (categoryName) {
            fetch('/categories', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name: categoryName }),
            })
            .then(response => response.json())
            .then(category => {
                addCategoryToList(category);
                newCategoryInput.value = '';
                const option = document.createElement('option');
                option.value = category.name;
                option.textContent = category.name;
                categoryFilter.appendChild(option);
            });
        }
    }

    function addCategoryToList(category) {
        const li = document.createElement('li');
        li.className = 'list-group-item d-flex justify-content-between align-items-center';
        li.textContent = category.name;
        const removeBtn = document.createElement('span');
        removeBtn.className = 'remove-category';
        removeBtn.innerHTML = '&times;';
        removeBtn.onclick = function() { removeCategory(category._id, li); };
        li.appendChild(removeBtn);
        categoryList.appendChild(li);
    }

    function removeCategory(categoryId, listItem) {
        fetch(`/categories/${categoryId}`, { method: 'DELETE' })
            .then(response => {
                if (response.ok) {
                    listItem.remove();
                    Array.from(categoryFilter.options).forEach(option => {
                        if (option.value === listItem.textContent.trim()) {
                            option.remove();
                        }
                    });
                }
            });
    }

    function updateModalStyles() {
        const computedStyle = getComputedStyle(document.body);
        const backgroundColor = computedStyle.backgroundColor;
        const textColor = computedStyle.color;

        const modalContent = document.querySelector('.modal-content');
        modalContent.style.backgroundColor = `${backgroundColor.replace(')', ', 0.8)')}`;
        modalContent.style.color = textColor;

        const listItems = document.querySelectorAll('.list-group-item');
        listItems.forEach(item => {
            item.style.backgroundColor = `${backgroundColor.replace(')', ', 0.2)')}`;
            item.style.color = textColor;
        });
    }
    document.getElementById('categoryModal').addEventListener('shown.bs.modal', updateModalStyles);

  
});
</script>

