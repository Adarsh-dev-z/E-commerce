    <script>
$(document).ready(() => {
  // Fetch cart count and update the cart count element
  $.ajax({
    url: '/cart-count',
    method: 'GET',
    success: (data) => {
      console.log('data', data);
      $('#CartCount').text(data.count);
    },
    error: (xhr, status, error) => {
      console.error('Error fetching cart count:', error);
    }
  });

  // Example of triggering the productAdded event for demo purposes
  // Remove this part if you have your own mechanism for adding products
  // and updating the cart count
  $(document).on('productAdded', () => {
    $.ajax({
      url: '/cart-count',
      method: 'GET',
      success: (data) => {
        console.log('data', data)
        $('#CartCount').text(data.count);
      },
      error: (xhr, status, error) => {
        console.error('Error fetching cart count:', error);
      }
    });
  });
});
</script>

