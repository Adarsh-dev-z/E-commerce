        async function loadReviews(productId) {
            console.log(productId,'productId');
            const response = await fetch(`/reviews/product/${productId}`);
            const reviews = await response.json();
            const reviewsList = document.getElementById('reviews-list');
            console.log(reviews,'reviews', response, 'response', reviewsList, 'response',);
            reviewsList.innerHTML = '';

            reviews.forEach(review => {
                const reviewItem = document.createElement('div');
                reviewItem.classList.add('spr-review');

                const starRating = '★'.repeat(review.rating) + '☆'.repeat(5 - review.rating);

                reviewItem.innerHTML = `
                    <div class="spr-review-header">
                        <span class="product-review spr-starratings spr-review-header-starratings">
                            ${starRating}
                        </span>
                        <h3 class="spr-review-header-title">${review.title}</h3>
                        <span class="spr-review-header-byline"><strong>${review.author}</strong> on <strong>${new Date(review.createdAt).toLocaleDateString()}</strong></span>
                    </div>
                    <div class="spr-review-content">
                        <p class="spr-review-content-body">${review.comment}</p>
                    </div>
                `;

                reviewsList.appendChild(reviewItem);
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            const productId = document.getElementById('review-form').getAttribute('data-id');
            loadReviews(productId);
        });
