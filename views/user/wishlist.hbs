<script>
$(document).ready(function(){
    $('.remove-wishlist-item').on('click', function(event){
        event.preventDefault(); // Prevent the default link behavior

        var $row = $(this).closest('tr');
        var productId = $row.data('id');

        $.ajax({
            url: '/remove-wishlist',
            type: 'GET',
            data: { id: productId },
            success: function(response) {
                if (response.success) {
                    if($('#wishlistItems .wishlist__row').length===0){
                    $row.remove(); 
                        location.reload();
                    }
                    Swal.fire({
          icon: 'success',
          title: 'Removed',
          text: 'Product removed from cart',
          showConfirmButton: false,
          timer: 1500,
          timerProgressBar: true,
          background: '#f9f9f9',
          iconColor: '#28a745',
          customClass: {
            popup: 'swal2-custom-popup'
          }
        })

                } else {
Swal.fire({
    icon: 'error',
    title: 'Error',
    text: 'Error removing item'
});                    
                }
            },
            error: function() {
                
Swal.fire({
    icon: 'error',
    title: 'Server Error',
    text: 'Internal server error'
});                
            }
        });
    });
});
</script>

