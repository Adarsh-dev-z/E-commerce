<script>
    $(document).ready(function() {
    $('.btn-addto-cart').on('click', function(event) {
        event.preventDefault();
        var productId = $(this).closest('form').find('input[name="id"]').val();
        var isLoggedIn = {{#if user}}true{{else}}false{{/if}};

        if (isLoggedIn) {
            // User is logged in, make an AJAX request
            $.ajax({
                url: '/add-to-cart/' + productId,
                type: 'POST',
                success: function(response) {
                    console.log(response)
                    if (response.success) {
                        $('#cart-popup').fadeIn();
                        setTimeout(function() {
                            $('#cart-popup').fadeOut();
                        }, 2000);
                        console.log('added to cart successfully');
                    } else {
                        console.log('error adding to cart');
                    }
                },
                error: function() {
                    alert('internal server error');
                }
            });
        } else {
            // User is not logged in, save to localStorage
            var guestCart = JSON.parse(localStorage.getItem('guestCart')) || [];
            var itemIndex = guestCart.findIndex(item => item.productId === productId);

            if (itemIndex > -1) {
                guestCart[itemIndex].quantity += 1;
            } else {
                guestCart.push({ productId: productId, quantity: 1 });
            }

            localStorage.setItem('guestCart', JSON.stringify(guestCart));
            $('#cart-popup').fadeIn();
            setTimeout(function() {
                $('#cart-popup').fadeOut();
            }, 2000);
            console.log('added to guest cart successfully');
        }
    });
});

</script>

